{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "./dist/main",
    "rootDir": "./src",
    "noEmit": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/components/*": ["./src/app/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/app/utils/*"],
      "@/hooks/*": ["./src/app/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/main/*": ["./src/main/*"],
      "@/preload/*": ["./src/preload/*"],
      "@/shared/*": ["./src/shared/*"]
    },
    "types": [
      "node",
      "electron"
    ]
  },
  "ts-node": {
    "esm": false,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    }
  },
  "include": [
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/app",
    "node_modules",
    "dist",
    "backup"
  ]
}
